{
  "manifest_version": 2,
  "name": "Fakku Helper",
  "version": "2.0",
  "description": "Fakku Helper",
  "icons": {
    "16": "ico/300.png",
    "32": "ico/300.png",
    "48": "ico/300.png",
    "64": "ico/300.png",
    "128": "ico/300.png"
  },
  "page_action": {
    "default_icon": {
      "16": "ico/300.png",
      "32": "ico/300.png",
      "48": "ico/300.png",
      "64": "ico/300.png",
      "128": "ico/300.png"
    }
  },
  "background": {
    "persistent": false,
    "scripts": [
      "src/js/bg/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.fakku.net/",
        "*://*.fakku.net/page/*"
      ],
      "js": [
        "cdn/js/jquery.min.js",
        "cdn/js/vue.min.js",
        "cdn/js/download.min.js",
        "src/js/cs/index.js",
        "src/js/cs/config.js",
        "src/js/cs/main.js"
      ],
      "css": [
        "src/css/main.css"
      ]
    }
  ],
  "permissions": [
    "declarativeContent",
    "activeTab",
    "tabs",
    "*://*.fakku.net/",
    "*://*.fakku.net/page/*"
  ],
  "web_accessible_resources": [
    "src/*"
  ]
}